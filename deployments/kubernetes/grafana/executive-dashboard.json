{
  "title": "Executive Performance Dashboard",
  "tags": [
    "executive",
    "overview",
    "performance"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "type": "stat",
      "title": "Total Request Rate",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) * 60",
          "refId": "A",
          "legendFormat": "req/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqpm",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1000,
                "color": "yellow"
              },
              {
                "value": 5000,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 2,
